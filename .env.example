# Este es un archivo de ejemplo. Copia este contenido a un nuevo archivo llamado .env
# y rellena los valores. El archivo .env NUNCA debe subirse a un repositorio Git.

# Server Configuration
PORT=3000

# Messaging Provider (meta or twilio)
MESSAGING_PROVIDER=meta

# Security Credentials
# Token que compartes con AsterVOIP para validar sus peticiones
ASTERVOIP_AUTH_TOKEN="generar_un_token_secreto_y_pegarlo_aqui"

# Resend API Key
RESEND_API_KEY="pegar_aqui_tu_api_key_de_resend"

# Allowed IPs for API access (optional, comma-separated)
# ALLOWED_IPS="192.168.1.1,10.0.0.1"

# Meta specific (required if MESSAGING_PROVIDER is 'meta')
# El token de tu app de Meta
WHATSAPP_API_TOKEN="pegar_aqui_el_token_de_meta"
# El ID de tu número de teléfono de WhatsApp
WHATSAPP_PHONE_NUMBER_ID="pegar_aqui_el_id_del_numero"
# El token que configuras en la App de Meta para validar sus webhooks
WHATSAPP_VERIFY_TOKEN="crear_un_token_para_verificar_webhooks_de_meta"

# Twilio specific (required if MESSAGING_PROVIDER is 'twilio')
TWILIO_ACCOUNT_SID="pegar_aqui_tu_account_sid_de_twilio"
TWILIO_AUTH_TOKEN="pegar_aqui_tu_auth_token_de_twilio"
TWILIO_WHATSAPP_NUMBER="pegar_aqui_tu_numero_de_whatsapp_de_twilio_ej_whatsapp:+1234567890"
TWILIO_TEMPLATE_SID="pegar_aqui_el_sid_de_tu_plantilla_de_twilio"

# Feature Flag: Send direct WhatsApp message via Twilio for testing (true/false)
# Set to true to send a simple text message instead of a template via Twilio
SEND_DIRECT_WHATSAPP_MESSAGE=false
